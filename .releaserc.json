{
  "branches": [
    "main",
    {"name": "next", "prerelease": true}
  ],
  "plugins": [
    ["@semantic-release/commit-analyzer", {
      "preset": "conventionalcommits",
      "releaseRules": [
        {"type": "feat", "release": "minor"},
        {"type": "fix", "release": "patch"},
        {"type": "perf", "release": "patch"},
        {"breaking": true, "release": "major"}
      ]
    }],
    ["@semantic-release/release-notes-generator", {
      "preset": "conventionalcommits",
      "presetConfig": {
        "types": [
          {"type": "feat", "section": "‚ú® Features"},
          {"type": "fix", "section": "üêõ Bug Fixes"},
          {"type": "perf", "section": "‚ö° Performance"},
          {"type": "docs", "section": "üìö Documentation"},
          {"type": "refactor", "section": "‚ôªÔ∏è Refactoring"}
        ]
      }
    }],
    ["@semantic-release/changelog", {"changelogFile": "CHANGELOG.md"}],
    ["@semantic-release/npm", {
      "npmPublish": true,
      "tarballDir": "dist"
    }],
    ["@semantic-release/github", {
      "assets": ["dist/**/*"],
      "failComment": false,
      "labels": ["release"]
    }],
    ["@semantic-release/git", {
      "assets": [
        "CHANGELOG.md",
        "package.json",
        "packages/eva-sovereign-ui-react/package.json",
        "packages/eva-sovereign-ui-vue/package.json",
        "packages/eva-sovereign-ui-angular/package.json",
        "packages/eva-sovereign-ui-svelte/package.json"
      ],
      "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
    }]
  ]
}
