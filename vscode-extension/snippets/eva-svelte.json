{
  "EVA Button": {
    "prefix": "eva-button",
    "body": [
      "<eva-button",
      "  variant=\"${1|primary,secondary,tertiary|}\"",
      "  size=\"${2|default,large|}\"",
      "  on:click={${3:handleClick}}",
      ">",
      "  ${4:Button Text}",
      "</eva-button>"
    ],
    "description": "EVA Sovereign UI Button component"
  },
  "EVA Input with bind action": {
    "prefix": "eva-input",
    "body": [
      "<eva-input",
      "  use:bind={${1:value}}",
      "  label=\"${2:Label}\"",
      "  placeholder=\"${3:Placeholder}\"",
      "/>"
    ],
    "description": "EVA Sovereign UI Input with bind action"
  },
  "EVA Checkbox with bindChecked": {
    "prefix": "eva-checkbox",
    "body": [
      "<eva-checkbox",
      "  use:bindChecked={${1:checked}}",
      "  label=\"${2:Label}\"",
      "/>"
    ],
    "description": "EVA Sovereign UI Checkbox with bindChecked"
  },
  "EVA Select with bind": {
    "prefix": "eva-select",
    "body": [
      "<eva-select",
      "  use:bind={${1:value}}",
      "  label=\"${2:Label}\"",
      ">",
      "  <option value=\"${3:value1}\">${4:Option 1}</option>",
      "  <option value=\"${5:value2}\">${6:Option 2}</option>",
      "</eva-select>"
    ],
    "description": "EVA Sovereign UI Select with bind"
  },
  "EVA Svelte Actions Import": {
    "prefix": "eva-actions-import",
    "body": [
      "import { bind, bindChecked, forwardEvents } from '@eva-suite/sovereign-ui-svelte';"
    ],
    "description": "Import EVA Sovereign UI Svelte actions"
  }
}
