{
  "name": "@eva-suite/sovereign-ui",
  "version": "1.0.0",
  "description": "EVA-Sovereign-UI: Production-ready Web Components design system for government applications",
  "type": "module",
  "main": "./dist/eva-sovereign-ui.umd.js",
  "module": "./dist/eva-sovereign-ui.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/eva-sovereign-ui.es.js",
      "require": "./dist/eva-sovereign-ui.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./components/*": "./dist/components/*/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "audit:components": "node scripts/audit-components.mjs",
    "status:matrix": "node scripts/generate-status-matrix.mjs",
    "benchmark": "node scripts/perf-benchmark.mjs",
    "size:guard": "node scripts/size-guard.mjs",
    "test:vr": "playwright test tests/visual-regression --update-snapshots",
    "test:vr:ci": "playwright test tests/visual-regression",
    "release": "semantic-release",
    "lint:styles": "stylelint \"**/*.{css,scss}\""
  },
  "keywords": [
    "web-components",
    "government",
    "canada",
    "gc-design-system",
    "accessibility",
    "wcag",
    "i18n",
    "five-eyes"
  ],
  "author": "EVA Suite",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@chromatic-com/storybook": "^4.1.3",
    "@playwright/test": "^1.57.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.7",
    "@semantic-release/npm": "^12.0.1",
    "@storybook/addon-a11y": "^10.1.2",
    "@storybook/addon-docs": "^10.1.2",
    "@storybook/addon-vitest": "^10.1.2",
    "@storybook/web-components-vite": "^10.1.2",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/browser-playwright": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.20",
    "axe-core": "^4.11.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^9.39.1",
    "happy-dom": "^20.0.11",
    "jsdom": "^24.1.3",
    "lighthouse": "^13.0.1",
    "lit": "^3.3.1",
    "playwright": "^1.57.0",
    "postcss": "^8.4.33",
    "semantic-release": "^23.1.1",
    "storybook": "^10.1.2",
    "stylelint": "^16.8.0",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.14"
  }
}
