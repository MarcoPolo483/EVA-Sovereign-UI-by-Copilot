{
  "name": "@eva-suite/sovereign-ui",
  "version": "1.1.0",
  "description": "EVA-Sovereign-UI: Production-ready Web Components design system for government applications",
  "type": "module",
  "main": "./dist/eva-sovereign-ui.umd.js",
  "module": "./dist/eva-sovereign-ui.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/eva-sovereign-ui.es.js",
      "require": "./dist/eva-sovereign-ui.umd.js"
    },
    "./components/*": "./dist/components/*/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "custom-elements.json"
  ],
  "scripts": {
    "dev": "npm run dev:devkit",
    "dev:devkit": "vite --config apps/dev-kit-demo/vite.config.ts",
    "dev:esdc": "vite --config apps/esdc-demo/vite.config.ts",
    "dev:perf": "vite --config apps/performance-dashboard/vite.config.ts",
    "build": "npm run build:wc && npm run build:react && npm run build:vue && npm run build:angular && npm run build:svelte && npm run build:devkit && npm run build:esdc && npm run build:perf",
    "build:wc": "tsc && vite build",
    "build:react": "cd packages/eva-sovereign-ui-react && npm install --no-audit --no-fund && npm run build",
    "build:vue": "cd packages/eva-sovereign-ui-vue && npm install --no-audit --no-fund && npm run build",
    "build:angular": "cd packages/eva-sovereign-ui-angular && npm install --no-audit --no-fund && npm run build",
    "build:svelte": "cd packages/eva-sovereign-ui-svelte && npm install --no-audit --no-fund && npm run build",
    "build:devkit": "vite build --config apps/dev-kit-demo/vite.config.ts --outDir ../../dist-devkit",
    "build:esdc": "vite build --config apps/esdc-demo/vite.config.ts --outDir ../../dist-esdc",
    "build:perf": "vite build --config apps/performance-dashboard/vite.config.ts",
    "build:standalone": "vite build --config apps/dev-kit-demo/vite.config.ts --outDir ../../dist-standalone --mode standalone",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "preview": "npm run preview:devkit",
    "preview:devkit": "vite preview --config apps/dev-kit-demo/vite.config.ts --outDir ../../dist-devkit",
    "preview:esdc": "vite preview --config apps/esdc-demo/vite.config.ts --outDir ../../dist-esdc",
    "preview:standalone": "vite preview --outDir dist-standalone",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:a11y": "vitest run tests/accessibility",
    "test:a11y:components": "vitest run tests/accessibility/component-audit.spec.ts",
    "test:a11y:templates": "vitest run tests/accessibility/template-audit.spec.ts",
    "test:a11y:report": "vitest run tests/accessibility && echo 'See tests/accessibility/ACCESSIBILITY-AUDIT-REPORT.md for full report'",
    "lint": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "storybook:open": "start http://localhost:6006",
    "audit:components": "node scripts/audit-components.mjs",
    "status:matrix": "node scripts/generate-status-matrix.mjs",
    "benchmark": "node scripts/perf-benchmark.mjs",
    "size:guard": "node scripts/size-guard.mjs",
    "custom-elements:generate": "cem analyze --globs 'packages/eva-sovereign-ui-wc/src/**/*.ts'",
    "sbom": "cyclonedx-npm --ignore-npm-errors --package-lock-only --output-reproducible --output-file sbom.json --spec-version 1.5 --flatten-components",
    "licenses:audit": "license-checker --json --production > licenses.json",
    "security:audit": "npm audit --json > security-audit.json",
    "test:vr": "playwright test tests/visual-regression --update-snapshots",
    "test:vr:ci": "playwright test tests/visual-regression",
    "release": "semantic-release",
    "lint:styles": "stylelint \"**/*.{css,scss}\""
  },
  "keywords": [
    "web-components",
    "government",
    "canada",
    "accessibility",
    "wcag",
    "i18n",
    "five-eyes"
  ],
  "author": "EVA Suite",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@chromatic-com/storybook": "^4.1.3",
    "@custom-elements-manifest/analyzer": "^0.9.9",
    "@cyclonedx/bom": "^4.1.3",
    "@cyclonedx/cyclonedx-npm": "^1.15.0",
    "@open-wc/testing": "^4.0.0",
    "@playwright/test": "^1.57.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.7",
    "@semantic-release/npm": "^12.0.1",
    "@storybook/addon-a11y": "^10.1.2",
    "@storybook/addon-docs": "^10.1.2",
    "@storybook/addon-vitest": "^10.1.2",
    "@storybook/web-components-vite": "^10.1.2",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/browser-playwright": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.20",
    "axe-core": "^4.11.0",
    "chart.js": "^4.5.1",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^9.39.1",
    "globby": "^14.1.0",
    "happy-dom": "^20.0.11",
    "jest-axe": "^9.0.0",
    "jsdom": "^24.1.3",
    "license-checker": "^25.0.1",
    "lighthouse": "^13.0.1",
    "lit": "^3.3.1",
    "playwright": "^1.57.0",
    "postcss": "^8.4.33",
    "semantic-release": "^23.1.1",
    "storybook": "^10.1.2",
    "stylelint": "^16.8.0",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.4.21",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.14"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  },
  "dependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3"
  }
}
