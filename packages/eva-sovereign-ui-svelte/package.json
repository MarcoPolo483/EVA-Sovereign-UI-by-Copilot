{
  "name": "@eva-suite/sovereign-ui-svelte",
  "version": "0.1.0",
  "description": "Svelte wrappers for EVA-Sovereign-UI Web Components",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": ["dist", "README.md"],
  "scripts": {
